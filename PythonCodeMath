import math
import random


# TODO: value of `pi`
pi = math.pi
print(pi)


# TODO: conditional to print out if `i` is less than or greater than 50
i = random.randint(0, 100)

if i < 50:
    print(i," is less than 50")
elif i == 50:
    print(i," is equal to 50")
else:
    print(i ," is greater than 50")


# TODO: conditional that prints the color of the picked fruit
pick_fruit = random.choice(['orange', 'strawberry', 'banana'])

if pick_fruit == 'orange':
    print("The fruit is orange")
elif pick_fruit == 'strawberry':
    print("The fruit is red")
elif pick_fruit == 'banana':
    print("The fruit is yellow")

# TODO: function that multiplies two numbers and returns the result

def multiplication(num1, num2):
    result = num1 * num2
    return result


# TODO: call the function a few times to calculate the following answers

print("12 x 96 =",multiplication(12, 96))

print("48 x 17 =",multiplication(48, 17))

print("196523 x 87323 =",multiplication(196523, 87323))
